<%- include('./partials/header.ejs') %>

    <body>

        <%- include('./partials/nav.ejs') %>

            <div class="blog_content">
                <h2>My Blogs</h2>
                <% if(blogs.length>0) { %>
                    <% blogs.forEach(blog=> {%>

                        <a class='single' href="/blogs/<%= blog._id %> ">
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snipppet">
                                <%= blog.snippet %>
                            </p>

                        </a>
                        <%})%>
                            <% } else{ %>
                                <p>The are no blogs to display</p>
                                <% } %>
            </div>
    </body>

    <%- include('./partials/footer.ejs') %>

        </html>